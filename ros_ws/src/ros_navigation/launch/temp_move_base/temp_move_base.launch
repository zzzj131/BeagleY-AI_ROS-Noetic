<launch>
  <!-- Arguments -->
  <arg name="cmd_vel_topic" default="/cmd_vel" />
  <arg name="odom_topic" default="odom" />   <!-- frame_id: "odom"  child_frame_id: "base_link" -->
  <arg name="move_forward_only" default="false"/>

  <!-- move_base -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" />
    <rosparam file="$(find ros_navigation)/temp_param_t265_ld06/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find ros_navigation)/temp_param_t265_ld06/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find ros_navigation)/temp_param_t265_ld06/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find ros_navigation)/temp_param_t265_ld06/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find ros_navigation)/temp_param_t265_ld06/move_base_params.yaml" command="load" />
    <rosparam file="$(find ros_navigation)/temp_param_t265_ld06/dwa_local_planner_params.yaml" command="load" />
    <remap from="odom" to="$(arg odom_topic)"/>
    <param name="DWAPlannerROS/min_vel_x" value="0.0" if="$(arg move_forward_only)" />
  </node>
</launch>
